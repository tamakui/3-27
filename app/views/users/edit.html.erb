 <% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class = "container ">
  <div class = "row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>  
      <%= form_with model: @user do |f| %>
      <div class="form-group">
       <h4>Name</h4>
       <%= f.text_field :name, autofocus: true, id: "inputName", paceholder: "名前" %>
       <h4>Image</h4>
       








<label for = "inputImage">Image</label><br>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
<label for = "inputIntroduction">Introduction</label><br>
<%= f.text_field :introduction, autofocus: true, id: "inputIntroduction", placeholder: "自己紹介文" %>
<%= f.submit "Update User" %>
<% end %>