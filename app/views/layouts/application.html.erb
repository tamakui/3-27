<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name ="viewport" content ="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <a class = "navbar-brand p-3"></a>
          <span>Bookers</span>
          ã€€<div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
      <li class = "nav-item">
      <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
      <i class="fas fa-home"></i>Home
      <% end %> </li>
      <li class = "nav-item">
        <%= link_to users_path, class: 'nav-link text-light' do %>
        <i class="fas fa-users"></i>Users
      <% end %> </li>
      </li>
      <li class = "nav-item">
        <%= link_to books_path, class:  'nav-link text-light' do %>
        <i class="fas fa-book-open"></i>Books
      <% end %> </li>
        
      </li>
      <li class = "nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light navbar-dark' do %>
         <i class="fas fa-sign-out-alt"></i>Log out
      <% end %> </li>
        
      </li>
      
      <% else %>
      <li class = "nav-item">
        <%= link_to homes_top_path, class: 'nav-link text-blue text-light' do %>
        <i class="fas fa-home"></i>Home
      <% end %>
      </li>
       <li class = "nav-item">
        <%= link_to about_path, class: 'nav-link text-blue text-light' do %>
        <i class="fas fa-link"></i>About
      <% end %>
        
      </li>
      <li class = "nav-item">
        <%= link_to new_user_registration_path, class: 'nav-link text-blue text-light' do %>
        <i class="fas fa-user-plus"></i>Sign up
        <% end %>
      </li>
      <li class = "nav-item">
        <%= link_to new_user_session_path, class: 'nav-link text-blue text-light' do %>
        <i class="fas fa-sign-in-alt"></i>Log in
        <% end %>
      </li>
      <% end %>
      </ul>
      </div>
      </div>
    </header>
    <main class = "mb-auto" >
    <%= yield %>
    </main>
    <footer class = "text-black pt-5 pb-4" >
      <div class = "container">
        <div class = "row no-gutters" >
          <div class = "col-md-4" >
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
