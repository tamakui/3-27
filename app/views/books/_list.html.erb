<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<table class = "table" >
    <tbody>
        <tr>
            <%= form_with model: user do |f| %>
            <h4>name</h4>
            <%= f.text_field :name %>
            <h4>introduction</h4>
            <%= f.text_field :introduction %>
            <% end %>
        </tr>
    </tbody>
</table>
<%#= link_to 'Log in', edit_user_registration_path, class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<%# end %>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_field :body %>
<%= f.submit 'Create Book' %>
<% end %>
